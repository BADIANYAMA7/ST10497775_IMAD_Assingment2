<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backiee_66097_portrait"
    tools:context=".Quizz2">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="645dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="Football Quiz"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Score2"
        android:layout_width="142dp"
        android:layout_height="57dp"
        android:layout_marginStart="271dp"
        android:layout_marginBottom="588dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="Score"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/Question2"
        android:layout_width="327dp"
        android:layout_height="245dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-135dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Answer2"
        app:layout_constraintEnd_toStartOf="@+id/Score2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Score2" />

    <TextView
        android:id="@+id/Answer2"
        android:layout_width="324dp"
        android:layout_height="79dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="21dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="User Input(from Right to Left)"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/TrueButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Question2" />

    <TextView
        android:id="@+id/Feedback2"
        android:layout_width="324dp"
        android:layout_height="79dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="2dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/QuestionButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TrueButton2"
        app:layout_constraintTop_toBottomOf="@+id/FalseButton2" />

    <Button
        android:id="@+id/TrueButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="1dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="TRUE"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Feedback2"
        app:layout_constraintEnd_toStartOf="@+id/Feedback2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Answer2" />

    <Button
        android:id="@+id/FalseButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="42dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="FALSE"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Feedback2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Answer2"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/BackToMenu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="35dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="Menu"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Start2"
        app:layout_constraintTop_toBottomOf="@+id/Feedback2" />

    <Button
        android:id="@+id/Start2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginEnd="-20dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="START"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BackToMenu2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuestionButton2" />

    <Button
        android:id="@+id/QuestionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="53dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="NEXT"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Start2"
        app:layout_constraintEnd_toStartOf="@+id/BackToMenu2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Feedback2" />

    <Button
        android:id="@+id/Result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="29dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="Results"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Feedback2"
        app:layout_constraintEnd_toStartOf="@+id/FalseButton2"
        app:layout_constraintStart_toEndOf="@+id/TrueButton2"
        app:layout_constraintTop_toBottomOf="@+id/Answer2"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>